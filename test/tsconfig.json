{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "experimentalDecorators": true,
    "declaration": true,
    "noEmit": false,
    "outDir": "../tsbuild",
    "noUnusedLocals": false,
    "noImplicitAny": false
  },
  "include": [
    "../src",
    "."
  ],
  "exclude": [
    "../sanity",
    "../dist",
    "../tsbuild",
    "../node_modules",
    "mocha.opts"
  ]
}
